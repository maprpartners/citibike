wget https://amazon-eks.s3-us-west-2.amazonaws.com/2018-04-04/bin/linux/amd64/kubectl
chmod 755 kubectl
mv kubectl /usr/bin
yum -y install git bind-utils
pip install awscli
aws configure

curl -O https://amazon-eks.s3-us-west-2.amazonaws.com/2018-04-04/eks-2017-11-01.normal.json
aws configure add-model --service-model file://eks-2017-11-01.normal.json --service-name eks


cert=`aws eks describe-cluster --region us-west-2 --cluster-name jsuneks  --query cluster.certificateAuthority.data`
url=`aws eks describe-cluster --region us-west-2 --cluster-name jsuneks --query cluster.masterEndpoint`

mkdir -p ~/.kube

cp config /tmp
sed -i s#\<endpoint-url\>#$url#g /tmp/config
sed -i s#\<base64-encoded-ca-cert\>#$cert#g /tmp/config

echo "what's the cluster name"
read clname
sed -i s#\<cluster-name\>#$clname#g /tmp/config

cp /tmp/config ~/.kube

